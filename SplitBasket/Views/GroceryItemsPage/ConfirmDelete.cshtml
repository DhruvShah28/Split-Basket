@model SplitBasket.Models.GroceryItemDto

<h2>Are you sure you want to delete this grocery item?</h2>

<div>
    <p>Name: @Model.Name</p>
    <p>Quantity: @Model.Quantity</p>
    <p>Unit Price: @Model.UnitPrice</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.ItemId" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Details" asp-route-id="@Model.ItemId" class="btn btn-secondary">Cancel</a>
</form>
