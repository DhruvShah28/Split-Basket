@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SplitBasket - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f8ff;
            font-family: Arial, sans-serif;
            text-align: center;
        }

        h1 {
            color: #007bff;
            font-weight: bold;
        }

        .lead {
            font-size: 18px;
            color: #555;
        }

        .btn-lg {
            padding: 15px;
            font-size: 18px;
            border-radius: 8px;
            transition: 0.3s;
        }

            .btn-lg:hover {
                transform: translateY(-3px);
            }

        .options {
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <h1 class="display-4">Welcome to SplitBasket!</h1>
    <p class="lead">The ultimate platform for managing your group grocery purchases and tracking amounts owed and paid.</p>

    <div class="options">
        <h3>What would you like to do?</h3>
        <div class="row mt-4 justify-content-center">
            <div class="col-md-4">
                <form action="@Url.Action("List", "GroceryItemsPage")" method="get">
                    <button type="submit" class="btn btn-primary btn-lg w-100">View Grocery Items</button>
                </form>
            </div>
            <div class="col-md-4">
                <form action="@Url.Action("List", "MembersPage")" method="get">
                    <button type="submit" class="btn btn-secondary btn-lg w-100">Manage Members</button>
                </form>
            </div>
            <div class="col-md-4">
                <form action="@Url.Action("List", "PurchasesPage")" method="get">
                    <button type="submit" class="btn btn-info btn-lg w-100">View Purchases</button>
                </form>
            </div>
        </div>
    </div>

    <hr class="my-4" />
    <p class="text-muted">SplitBasket helps you keep track of what needs to be bought, who has bought what items, and what amount is owed.</p>
</body>
</html>
