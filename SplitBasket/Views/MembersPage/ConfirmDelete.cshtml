@model SplitBasket.Models.MemberDto

<h2>Are you sure you want to delete this member?</h2>

<div>
    <p>Name: @Model.Name</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.MemberId" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Details" asp-route-id="@Model.MemberId" class="btn btn-secondary">Cancel</a>
</form>
