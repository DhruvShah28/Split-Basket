@model SplitBasket.Models.PurchaseHistoryDto

<h2>Are you sure you want to delete this purchase?</h2>

<div>
    <p><strong>Purchase ID:</strong> @Model.PurchaseID</p>
    <p><strong>Member Name:</strong> @Model.MemberName</p>
    <p><strong>Date Purchased:</strong> @Model.DatePurchased</p>
    <p><strong>Items Purchased:</strong></p>
    <ul>
        @foreach (var item in Model.ItemNames)
        {
            <li>@item</li>
        }
    </ul>
    <p><strong>Total Amount:</strong> @Model.TotalAmount</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.PurchaseID" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Details" asp-route-id="@Model.PurchaseID" class="btn btn-secondary">Cancel</a>
</form>
