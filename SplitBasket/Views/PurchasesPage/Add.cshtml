@model SplitBasket.Models.AddPurchaseDto

<h2>Add Purchase</h2>

<form asp-action="Add" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="DatePurchased" class="control-label">Date Purchased</label>
        <input asp-for="DatePurchased" class="form-control" type="date" />
        <span asp-validation-for="DatePurchased" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MemberId" class="control-label">Member</label>
        <select asp-for="MemberId" class="form-control">
            @foreach (var member in ViewBag.Members as IEnumerable<SplitBasket.Models.MemberDto>)
            {
                <option value="@member.MemberId">@member.Name</option>
            }
        </select>
        <span asp-validation-for="MemberId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ItemIds">Items</label>
        @foreach (var item in ViewBag.Items as IEnumerable<SplitBasket.Models.GroceryItemDto>)
        {
            <div>
                <input type="checkbox" name="itemIds" value="@item.ItemId" /> @item.Name
            </div>
        }
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary mt-4">Add Purchase</button>
    </div>
</form>

<div class="form-group">
    <a asp-action="List" class="btn btn-secondary mt-3">Back to List</a>
</div>
